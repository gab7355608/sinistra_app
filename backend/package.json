{
    "name": "backend",
    "version": "1.0.0",
    "description": "API Fastify avec Prisma et MySQL",
    "main": "dist/index.js",
    "scripts": {
        "email": "email dev --dir src/emails --port 3050",
        "build": "tsc -b",
        "start": "ts-node -r module-alias/register src/index.ts",
        "dev": "nodemon --exec \"node -r @swc-node/register -r tsconfig-paths/register\" src/index.ts",
        "prisma:generate": "prisma generate",
        "prisma:migrate": "prisma migrate dev",
        "prisma:format": "prisma format",
        "prisma:seed": "ts-node -r tsconfig-paths/register prisma/seed.ts",
        "format": "prettier --write \"src/**/*.{ts,js,json}\" --config .prettierrc",
        "prisma:all": "prisma format && prisma generate && prisma migrate dev && ts-node -r tsconfig-paths/register prisma/seed.ts",
        "prisma:docker:generate": "docker exec -it fastify-backend-dev sh -c \"cd /app/backend && pnpm prisma generate\"",
        "prisma:docker:all": "docker exec -it fastify-backend-dev sh -c \"cd /app/backend && pnpm prisma format && pnpm prisma generate && pnpm prisma migrate dev --name docker-init --preview-feature && pnpm ts-node -r tsconfig-paths/register prisma/seed.ts\"",
        "test": "dotenv -e .env.test -- jest",
        "test:watch": "dotenv -e .env.test -- jest --watch",
        "test:coverage": "dotenv -e .env.test -- jest --coverage"
    },
    "prisma": {
        "seed": "ts-node -r tsconfig-paths/register prisma/seed.ts"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@fastify/cors": "^11.0.0",
        "@swc-node/register": "^1.6.8",
        "@types/bcrypt": "^5.0.2",
        "@types/cron": "^2.4.3",
        "@types/jest": "^29.5.14",
        "@types/jsonwebtoken": "^9.0.9",
        "@types/node": "^22.13.9",
        "@types/nodemailer": "^6.4.17",
        "@types/react": "^18.3.12",
        "@types/uuid": "^10.0.0",
        "dotenv-cli": "^8.0.0",
        "eslint-config-prettier": "^10.0.2",
        "eslint-plugin-prettier": "^5.2.3",
        "jest": "^29.7.0",
        "prettier": "^3.5.3",
        "prisma": "6.4.1",
        "react-email": "4.0.3",
        "ts-jest": "^29.2.6",
        "tsx": "^4.19.3",
        "typescript": "^5.8.2"
    },
    "dependencies": {
        "@azure/cognitiveservices-computervision": "^8.2.0",
        "@azure/cognitiveservices-customvision-prediction": "^5.1.2",
        "@azure/ms-rest-js": "^2.7.0",
        "@faker-js/faker": "^9.5.1",
        "@fastify/multipart": "^9.0.3",
        "@fastify/rate-limit": "^10.2.2",
        "@fastify/swagger": "^9.4.2",
        "@fastify/swagger-ui": "^5.2.2",
        "@prisma/client": "6.4.1",
        "@react-email/components": "^0.0.35",
        "@react-email/img": "0.0.11",
        "@tailwindcss/vite": "^4.1.1",
        "@trivago/prettier-plugin-sort-imports": "^5.2.2",
        "axios": "^1.9.0",
        "bcryptjs": "^3.0.2",
        "cron": "^4.1.0",
        "dotenv": "^16.4.7",
        "fastify": "^5.2.1",
        "fastify-metrics": "^12.1.0",
        "i": "^0.3.7",
        "ioredis": "^5.6.1",
        "jsonwebtoken": "^9.0.2",
        "minio": "^8.0.5",
        "module-alias": "^2.2.3",
        "nodemailer": "^6.10.0",
        "nodemon": "^3.1.9",
        "npm": "^11.2.0",
        "pino": "^9.6.0",
        "pino-http": "^10.4.0",
        "pino-loki": "^2.5.0",
        "pino-pretty": "^13.0.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "resend": "^4.1.2",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "ua-parser-js": "^2.0.3",
        "uuid": "^11.1.0",
        "zod": "^3.24.2"
    },
    "workspaces": [
        "shared",
        "frontend",
        "backend"
    ],
    "_moduleAliases": {
        "@": "src",
        "@shared": "../shared"
    }
}
