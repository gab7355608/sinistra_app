{
    "watch": ["src", "prisma", "../shared"],
    "ext": ".ts,.js,.json,.prisma",
    "ignore": [
        ".git",
        "node_modules/*",
        "dist/*",
        "coverage/*",
        "*.test.ts",
        "*.spec.ts",
        "../shared/node_modules/*",
        "*.log",
        "logs/*"
    ],
    "exec": "node -r @swc-node/register -r tsconfig-paths/register src/index.ts",
    "delay": "500",
    "env": {
        "NODE_ENV": "development",
        "TS_NODE_TRANSPILE_ONLY": "true"
    },
    "legacyWatch": true,
    "polling": true,
    "pollInterval": 2000
}
